<%- include('./partials/head')%>
<body>
    <%- include('./partials/outheader') %>
    <main class="container">
        <p class="fs-5">Enter your login details</p>
        <form action="/login" method="post" class="form">
            <div class="mt-2">
                <label for="name">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="mt-2">
                <label for="name">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <div class="mt-2">
                <button class="btn btn-primary text-light form-control">Login</button>
            </div>
        </form>
        <p class="fs-5 text-center mt-4">Or</p>
        <p class="fs-5 text-center"><a href="/register">Register an account</a></p>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>